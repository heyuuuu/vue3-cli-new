{
  "compilerOptions": {
		"baseUrl": ".",
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
		"sourceMap": false,
		"strictPropertyInitialization": false,
		"noImplicitAny": true,
    "types": [
      "webpack-env"
    ],
    "paths": {
      "src/*": ["src/*"]
    },
    "lib": [
      "esnext",
      "dom",
			"dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
